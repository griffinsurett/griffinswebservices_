---
// src/layouts/Header.astro
/**
 * Site Header with Navigation
 */
import ContentRenderer from "@/components/ContentRenderer/ContentRenderer.astro";
import Logo from "@/components/Logo/Logo.astro";
import ThemeControls from "@/components/ThemeControls/ThemeControls.jsx";
import { related } from "@/utils/query/snippets";
---
<header class="fixed w-full top-0 z-[100000]" role="banner">
    <nav class="relative flex items-center justify-between head-foot-section py-2 gap-4" aria-label="Main navigation">

      <!-- Logo -->
      <Logo loading="eager" trigger="scroll" animateOutText={true} />

      <ThemeControls className="hidden lg:flex" client:media="(min-width: 1024px)" />

      <div class="flex items-center gap-4">
        <ThemeControls className="lg:hidden" client:media="(max-width: 1023px)" />

        <div class="flex items-center justify-center sm:gap-4">
          <!-- Navigation Menu using query -->
          <ContentRenderer
            query={related("menu-items", "menu", "main-menu")}
            variant="MenuVariant"
            mode="hamburger-only"
            className="header-navigation"
            hamburgerTransform={true}
            closeButton={false}
          />
        </div>
      </div>
    </nav>
</header>
