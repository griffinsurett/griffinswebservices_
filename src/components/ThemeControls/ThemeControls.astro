---
/**
 * ThemeControls - Astro wrapper for theme control islands
 * Loads each control as a separate island for better code splitting
 */
interface Props {
  className?: string;
}

const { className = "" } = Astro.props;

import LanguageDropdown from "./LanguageDropdown";
import DarkLightToggle from "./DarkLightToggle";
import AccentPicker from "./AccentPicker";
---

<div
  class:list={[
    "relative flex items-center gap-1.5",
    "sm:absolute sm:top-1/2 sm:left-1/2 sm:-translate-x-1/2 sm:-translate-y-1/2",
    "transition-opacity duration-300 ease-in-out z-999999",
    "opacity-100 pointer-events-auto",
    className,
  ]}
>
  <LanguageDropdown client:idle />
  <DarkLightToggle client:idle />
  <AccentPicker client:idle />
</div>
